dnl Process this file with autoconf to produce a configure script.

AC_INIT(configure.in)
AC_CONFIG_SRCDIR(wsmantests.spec.in)
AM_INIT_AUTOMAKE(wsmantests, 1.0)
AM_CONFIG_HEADER(config.h)
AM_MAINTAINER_MODE

AC_ISC_POSIX
AC_PROG_CC
AM_PROG_CC_STDC
AC_HEADER_STDC

WSMAN_PKG=$PACKAGE_NAME
AC_SUBST(WSMAN_PKG)


PKG_CHECK_MODULES(OPENWSMAN, [openwsman >= 0.0.0])
PKG_CHECK_MODULES(CUNIT, libcunit);
AC_SUBST(OPENWSMAN_CFLAGS)
AC_SUBST(OPENWSMAN_LIBS)

AC_OUTPUT([
	wsmantests.spec
	Makefile
])

