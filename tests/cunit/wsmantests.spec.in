%define prefix /usr/local

Name: viewsman
Summary: %{name} - GTK Front end client for WSMAN
Version: @VERSION@
Release: 1
License: BSD
URL: http://wsman.org
Group: Utilities
Vendor: WSMAN Project
Packager: sadden
Source: %{name}-@VERSION@.tar.gz
Buildroot: /var/tmp/ViewsMan-root
BuildRequires: glib2-devel
Summary: A GTK Front end to WSMAN
Group: Utilities
AutoReq: yes
Requires: libc.so.6

%description 
This is a GTK based GUI developed part of WSMAN.

###################################################
%prep
###################################################

###################################################
%setup
###################################################

###################################################
%build
###################################################
./configure 
make

###################################################
%install
###################################################
if
  [ ! -z "${RPM_BUILD_ROOT}"  -a "${RPM_BUILD_ROOT}" != "/" ]
then
  rm -rf $RPM_BUILD_ROOT
fi
make DESTDIR=$RPM_BUILD_ROOT install

#################################################
%post
###################################################

###################################################
%files
###################################################
%defattr(-,root,root)
%{prefix}/bin/viewsman
%{prefix}/share/viewsman/

###################################################
%clean
###################################################
if
    [ -z "${RPM_BUILD_ROOT}"  -a "${RPM_BUILD_ROOT}" != "/" ]
then
    rm -rf $RPM_BUILD_ROOT
fi
rm -rf $RPM_BUILD_DIR/viewsman-@VERSION@

